{
  "name": "video-library-app",
  "version": "1.0.0",
  "description": "Offline video library app",
  "main": "dist/main.js",
  "scripts": {
  "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:main\"",
  "start:main": "npm run build:main && cross-env NODE_ENV=development electron .",
    "start:renderer": "cd src/renderer && npm start",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p src/main",
    "build:renderer": "cd src/renderer && npm run build",
    "dist": "npm run build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.0",
    "electron": "^25.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3"
  }
}
